<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>CurrencyConvertor</display-name>
  <welcome-file-list>
    <welcome-file>CurrencyConvertor.html</welcome-file>
    
  </welcome-file-list>
 
<servlet>
  <servlet-name>CurrencyConvertor</servlet-name>
  <servlet-class>com.demo.servlet.ConvertorServlet</servlet-class>
   <init-param>
        <param-name>dollar</param-name>
        <param-value>85</param-value>
    </init-param>
    <init-param>
        <param-name>pound</param-name>
        <param-value>90</param-value>
    </init-param>
    <init-param>
        <param-name>euro</param-name>
        <param-value>80</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
  
  <servlet-name>CurrencyConvertor</servlet-name>
  <url-pattern>/converter</url-pattern>
  </servlet-mapping>


</web-app>